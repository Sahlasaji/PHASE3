public PatientDashboardControl(PatientViewModel viewModel)
{
    InitializeComponent();
    _viewModel = viewModel;
    LoadPatients();
}

private void LoadPatients()
{
    grdPatients.Items.Clear(); // Clear existing items if any
    foreach (var patient in _viewModel.ConfirmedPatients)
    {
        grdPatients.Items.Add(new
        {
            Name = patient.Name,
            Age = patient.Age,
            DateOfBirth = patient.DateOfBirth.ToShortDateString(),
            Address = patient.Address,
            Slot = patient.Slot,
            BookingDate = patient.BookingDate.ToShortDateString()
        });
    }
}
